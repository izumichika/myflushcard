.header
  %h.header__title
    Myフラッシュカード
  .header__right
    .header__right__return
      = link_to "一覧へ", "/"
.body
  .body__problems
    - @problems.each do |problem|
      .body__problems__problem
        .body__problems__problem__japanese
          = problem.question
        = form_with(model: @result, local: true, autocomplete: 'off') do |form|
          .body__problems__problem__english
            = form.text_field :anser, placeholder: "英単語", size: "10x10", class: "body__problems__problem__english__einput", autocomplete: "off"
          = form.submit "作成"

.footer